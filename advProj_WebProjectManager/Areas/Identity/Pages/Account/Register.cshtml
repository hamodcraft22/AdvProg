@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-1">
                <input asp-for="Input.Username" class="form-control" autocomplete="lastname" aria-required="true" />
                <label asp-for="Input.Username"></label>
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-floating mb-1">
                        <input asp-for="Input.fName" class="form-control" autocomplete="firstname" aria-required="true" />
                        <label asp-for="Input.fName"></label>
                        <span asp-validation-for="Input.fName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating mb-1">
                        <input asp-for="Input.lName" class="form-control" autocomplete="lastname" aria-required="true" />
                        <label asp-for="Input.lName"></label>
                        <span asp-validation-for="Input.lName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-floating mb-1">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-1">
                <input asp-for="Input.Phone" class="form-control" autocomplete="phone" aria-required="true" />
                <label asp-for="Input.Phone"></label>
                <span asp-validation-for="Input.Phone" class="text-danger"></span>
            </div>
            <div class="form-floating mb-1">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-1">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
