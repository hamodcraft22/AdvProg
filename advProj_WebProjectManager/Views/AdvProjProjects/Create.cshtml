@model advProj_BusinessObjects.AdvProjProject

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>AdvProjProject</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-1">
                <input asp-for="ProjectName" class="form-control" />
                <label asp-for="ProjectName" class="control-label"></label>
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-1">
                <input asp-for="ProjectDescription" class="form-control" />
                <label asp-for="ProjectDescription" class="control-label"></label>
                <span asp-validation-for="ProjectDescription" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-floating mb-1">
                        <input asp-for="StartDate" class="form-control" type="date"/>
                        <label asp-for="StartDate" class="control-label"></label>
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating mb-1">
                        <input asp-for="EndDate" class="form-control" type="date" />
                        <label asp-for="EndDate" class="control-label"></label>
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-floating mb-1">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
