@model IEnumerable<advProj_BusinessObjects.AdvProjNotification>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.NotificationTitle)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.NotificationDate)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Task)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Task.Project.ProjectName)
            </th>
            <th class="text-center">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NotificationTitle)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.NotificationDate)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Task.TaskName)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(model => item.Task.Project.ProjectName)
                </td>
                <td class="text-center">
                    <a type="button" class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.NotificationId"><i class="fa-solid fa-eye fa-xs"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
