@model IEnumerable<advProj_BusinessObjects.AdvProjLog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>



    
    @{
        if (Model.Count() != 0)
        {
            <table class="table table-striped">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.LogSource)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Date)
            </th class="text-center">
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th class="text-center">
                Actions
            </th>
        </tr>
    </thead>
            <tbody>
@foreach (var item in Model) 
{
        <tr>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.LogSource)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td class="text-center">
                <a type="button" class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.LogId"><i class="fa-solid fa-circle-info fa-xs"></i></a>
            </td>
        </tr>
}
    </tbody>
    </table>
        }
        else
        {
            <h1>No Data Is Present</h1>
        }
    }

